<h1>Entres</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Montant in</th>
      <th>Motif</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entres.each do |entre| %>
      <tr>
        <td><%= entre.date %></td>
        <td><%= entre.montant_in %></td>
        <td><%= entre.motif %></td>
        <td><%= link_to 'Show', entre %></td>
        <td><%= link_to 'Edit', edit_entre_path(entre) %></td>
        <td><%= link_to 'Destroy', entre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>
  <td>la somme de entrees:<%= Entre.sum(:montant_in) %></td><br>
